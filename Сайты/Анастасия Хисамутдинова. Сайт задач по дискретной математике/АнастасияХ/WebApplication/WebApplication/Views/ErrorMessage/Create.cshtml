@model WebApplication.Models.ErrorMessage

@{
    ViewBag.Title = "Создание новой задачи об ошибке";
}

<h2>Создание новой задачи об ошибке</h2>


@using (Html.BeginForm("Create", "ErrorMessage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Text", new { @class = "form-control", id = "Text" })
            </div>                
        </div>

        <div class="form-group">
            @Html.Label("Приложенный файл?", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <input type="file" class="form-control" id="error" name="error" value="Сохранить файл" />
            </div>
        </div>
        <br />

        <div class="form-group">
            @Html.Label("Подтвердить отправку?", new { @class = "col-md-2 control-label" })

            <div class="col-md-10">
                <input class="buttonS" type="submit" value="Сохранить" width="100" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index","ErrorMessage", new { @class="buttonB"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
